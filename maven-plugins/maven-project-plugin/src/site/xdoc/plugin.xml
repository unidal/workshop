<plugin>
  <description></description>
  <groupId>com.site.maven.plugins</groupId>
  <artifactId>maven-project-plugin</artifactId>
  <version>1.0.0</version>
  <goalPrefix>project</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>plan</goal>
      <description>Generate a Maven project build plan (build-plan.xml)</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.site.maven.plugin.project.BuildPlanMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>planFile</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Build plan file</description>
        </parameter>
        <parameter>
          <name>pomFile</name>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>POM file</description>
        </parameter>
      </parameters>
      <configuration>
        <planFile implementation="java.io.File" default-value="${basedir}/plan.xml">${plan}</planFile>
        <pomFile implementation="java.io.File" default-value="${basedir}/pom.xml">${pom}</pomFile>
      </configuration>
    </mojo>
    <mojo>
      <goal>create-template</goal>
      <description>Create a template project from current project.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.site.maven.plugin.project.CreateTemplateMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description>Current project</description>
        </parameter>
      </parameters>
      <configuration>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
      </configuration>
    </mojo>
    <mojo>
      <goal>package</goal>
      <description>Package all source files in the project for backup purpose.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>true</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>com.site.maven.plugin.project.PackageMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>excludeDirs</name>
          <type>java.lang.String</type>
          <required>false</required>
          <editable>true</editable>
          <description></description>
        </parameter>
        <parameter>
          <name>project</name>
          <type>org.apache.maven.project.MavenProject</type>
          <required>true</required>
          <editable>false</editable>
          <description>Current project</description>
        </parameter>
      </parameters>
      <configuration>
        <project implementation="org.apache.maven.project.MavenProject">${project}</project>
        <excludeDirs implementation="java.lang.String" default-value="ws">${excludeDirs}</excludeDirs>
      </configuration>
    </mojo>
  </mojos>
  <dependencies/>
</plugin>