<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
      <component>
         <role>com.site.wdbc.kijiji.Configuration</role>
         <implementation>com.site.wdbc.kijiji.Configuration</implementation>
         <configuration>
            <config>config.xml</config>
         </configuration>
      </component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.kijiji.Processor</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.kijiji.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
         <configuration>
            <handler query="page-links" interval="2">
               <page name="list"/>
               <handler query="list" interval="2">
                  <page name="details"/>
                  <handler query="picture"/>
                  <handler query="contact"/>
                  <handler query="details">
                     <processor name="default"/>
                  </handler>
               </handler>
            </handler>
         </configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>http://shanghai.baixing.com${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.kijiji.PageLinksQuery</implementation>
         <configuration>
            <uriPattern>
               <![CDATA[
               http://{2}.baixing.com/c{0}-p{1}?ref=dropdown&size=80&view=title&order=time&type={3}
            ]]>
            </uriPattern>
         </configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.kijiji.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="link">div[8].div[*].h2.a.@href</path>
					<path name="title">div[8].div[*].h2.a</path>
					<path name="date">div[8].div[*].span</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>list</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>picture</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="link">html.body.div[2].div[3].div.ul.li.a.img.@src</path>
				</paths>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>contact</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="contact">-</path>
					<path name="mobilephone">-</path>
					<path name="telephone">-</path>
					<path name="email">-</path>
					<path name="qq">-</path>
					<path name="msn">-</path>
					<path name="url">-</path>
					<path name="other">-</path>
					<path name="text">html.body.div[2].div[3].div.div[2].script[*].#comment</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>contact</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.kijiji.ListFilter</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.kijiji.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>contact</role-hint>
			<implementation>com.site.wdbc.kijiji.ContactFilter</implementation>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="label">html.body.div[2].div[3].div.address</path>
					<path name="text">html.body.div[2].div[3].div.address.a[*]</path>
					<path name="link">html.body.div[2].div[3].div.address.a[*].@href</path>
					<path name="content">html.body.div[2].div[3].div.div[2]</path>
					<path name="script">-</path>
					<path name="categoryId">-</path>
					<path name="categoryName">-</path>
					<path name="districtId">-</path>
					<path name="districtName">-</path>
					<path name="date">-</path>
					<path name="body">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>details</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.kijiji.DetailsFilter</implementation>
		</component>   
	</components>
</plexus>
