<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
      <component>
         <role>com.site.wdbc.n51job.Configuration</role>
         <implementation>com.site.wdbc.n51job.Configuration</implementation>
         <configuration>
            <config>config.xml</config>
         </configuration>
      </component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.n51job.Processor</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n51job.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
         <configuration>
            <handler query="page-links" interval="2">
               <page name="list"/>
               <handler query="list" interval="2">
                  <page name="details"/>
                  <handler query="picture"/>
                  <handler query="details">
                     <processor name="default"/>
                  </handler>
               </handler>
            </handler>
         </configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
				<method>POST</method>
				<post-data>${page-links:post-data}</post-data>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.n51job.PageLinksQuery</implementation>
         <configuration>
            <uriPattern>http://search.51job.com/jobsearch/search_result.php</uriPattern>
            <postDataPattern><![CDATA[
				postchannel=0000&stype=3&jobarea={2}&funtype={0}&industrytype=&issuedate=3&curr_page={1}
			]]></postDataPattern>
         </configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n51job.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="type">-</path>
					<path name="date">div[3].table.tr[4].td.table.tr[3].td.table.tr[*].td[3]</path>
					<path name="link">div[3].table.tr[4].td.table.tr[3].td.table.tr[*].td[2].a.@href</path>
					<path name="id">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>list</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>picture</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="link">html.body.div[2].div[3].div.ul.li.a.img.@src</path>
				</paths>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.n51job.ListFilter</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n51job.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="title">div[3].table.tr.td.table.tr.td.table.tr.td.table.tr.td</path>
					<path name="type">div[3].table.tr.td.table.tr.td.table.tr[3].td</path>
					<path name="job1">div[3].table.tr.td.table.tr[2].td.table.tr.td.table.tr[2].td</path>
					<path name="job2">div[3].table.tr.td.table.tr[2].td.table.tr[3].td.table.tr[2].td</path>
					<path name="job-attrs">div[3].table.tr.td.table.tr[2].td.table.tr[*].td.table.tr[*].td[*].*text</path>
					<path name="job-desc">div[3].table.tr.td.table.tr[2].td.table.tr[*].td.table[2].tr.td.p</path>
					<path name="company-desc">div[3].table.tr.td.table.tr[4].td.table.tr.td.table.tr[2].td[2].table.tr[*].td.*text</path>
					<path name="category">-</path>
					<path name="contact">-</path>
					<path name="district">-</path>
					<path name="body">-</path>
					<path name="picture">-</path>
					<path name="mobilephone">-</path>
					<path name="telephone">-</path>
					<path name="email">div[3].table.tr.td.table.tr[2].td.table.tr[*].td.table.tr[3].td[2].a</path>
					<path name="qq">-</path>
					<path name="msn">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>details</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.n51job.DetailsFilter</implementation>
		</component>   
	</components>
</plexus>
