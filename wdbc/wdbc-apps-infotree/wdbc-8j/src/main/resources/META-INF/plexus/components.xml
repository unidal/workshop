<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
      <component>
         <role>com.site.wdbc.n8j.Configuration</role>
         <implementation>com.site.wdbc.n8j.Configuration</implementation>
         <configuration>
            <config>config.xml</config>
         </configuration>
      </component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.n8j.Processor</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n8j.Configuration</role>
            </requirement>
            <requirement>
               <role>com.site.wdbc.infotree.InfoTreeConnector</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
         <configuration>
            <handler query="page-links" interval="2">
               <page name="list"/>
               <handler query="list" interval="2">
                  <page name="details"/>
                  <handler query="details">
                     <page name="description"/>
                     <handler query="description"/>
                     <processor name="default"/>
                  </handler>
               </handler>
            </handler>
         </configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>description</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${details:desc-link}</action>
				<ignoreEmptyAction>true</ignoreEmptyAction>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.n8j.PageLinksQuery</implementation>
         <configuration>
            <uriPattern>http://{2}.8j.com/biz/sports/{0}/{1}</uriPattern>
         </configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n8j.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="type">-</path>
					<path name="date">-</path>
					<path name="link">div[*].div.form.div.div[*].a[2].@href</path>
					<path name="title">div[*].div.form.div.div[*].a[2]</path>
					<path name="desc">div[*].div.form.div.div[*]</path>
					<path name="phone">-</path>
					<path name="address">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>list</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>description</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="text">html.body.table.*text</path>
				</paths>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.n8j.ListFilter</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.n8j.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="head">div[*].div[*]</path>
					<path name="desc">div[*].div[*].span</path>
					<path name="address">-</path>
					<path name="picture-link">div[*].div[2].a.@href</path>
					<path name="contact">-</path>
					<path name="category">-</path>
					<path name="district">-</path>
					<path name="district-1">div[*].div.a[5]</path>
					<path name="district-2">div[*].div.a[6]</path>
					<path name="body">-</path>
					<path name="mobilephone">-</path>
					<path name="telephone">-</path>
					<path name="email">-</path>
					<path name="qq">-</path>
					<path name="msn">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>details</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.n8j.DetailsFilter</implementation>
		</component>   
	</components>
</plexus>
