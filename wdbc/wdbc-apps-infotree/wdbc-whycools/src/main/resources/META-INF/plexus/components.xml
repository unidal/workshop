<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
      <component>
         <role>com.site.wdbc.whycools.Configuration</role>
         <implementation>com.site.wdbc.whycools.Configuration</implementation>
         <configuration>
            <config>config.xml</config>
         </configuration>
      </component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.whycools.Processor</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.whycools.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
         <configuration>
            <handler query="page-links" interval="2">
               <page name="list"/>
               <handler query="list" interval="2">
                  <page name="details"/>
                  <handler query="email"/>
                  <handler query="details">
                     <processor name="default"/>
                  </handler>
               </handler>
            </handler>
         </configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.whycools.PageLinksQuery</implementation>
         <configuration>
            <uriPattern><![CDATA[
               http://www.whycools.com/chaxun/cpch.asp?startpro={4}&startcity=%C8%AB%B2%BF&endpro={4}&endcity=%C8%AB%B2%BF&q_table=1&tname={3}&Submit22=%CB%D1%CB%F7&offset={1}
            ]]></uriPattern>
         </configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.whycools.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
               <path name="type">-</path>
					<path name="link">table[*].tr[*].td.table.tr.td[4].a.@href</path>
					<path name="title1">table[*].tr[*].td.table.tr.td[2]</path>
					<path name="title2">table[*].tr[*].td.table[2].tr.td[2]</path>
					<path name="date">table[*].tr[*].td.table[2].tr.td[4]</path>
               <path name="title">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>list</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>picture</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="link">html.body.div[2].div[3].div.ul.li.a.img.@src</path>
				</paths>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.whycools.ListFilter</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.whycools.Configuration</role>
            </requirement>
            <requirement>
               <role>com.site.wdbc.http.Session</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="title">-</path>
					<path name="content1">table[4].tr[2].td.table.tr[2].td.table[*].tr[*].td</path>
					<path name="content2">table[4].tr[2].td.table.tr[2].td.table[*].tr[*].td[2].*text</path>
					<path name="content">-</path>
					<path name="contact">-</path>
					<path name="picture">-</path>
					<path name="category">-</path>
					<path name="district">-</path>
					<path name="body">-</path>
					<path name="mobilephone">-</path>
					<path name="telephone">-</path>
					<path name="email">-</path>
					<path name="qq">-</path>
					<path name="msn">-</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>details</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.whycools.DetailsFilter</implementation>
		</component>   
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>email</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="email">table[4].tr[2].td.table.tr[2].td.table[2].tr[3].td[2]</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>email</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>email</role-hint>
			<implementation>com.site.wdbc.whycools.EmailFilter</implementation>
		</component>   
	</components>
</plexus>
