<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.baixing.Configuration</role>
			<implementation>com.site.wdbc.baixing.Configuration</implementation>
			<configuration>
				<config>config.xml</config>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.baixing.Processor</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.baixing.Configuration</role>
				</requirement>
				<requirement>
					<role>com.site.wdbc.infotree.InfoTreeConnector</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
			<configuration>
				<handler query="page-links" interval="2">
					<page name="list"/>
					<handler query="list" interval="2">
						<page name="details"/>
						<handler query="details">
							<processor name="default"/>
						</handler>
					</handler>
				</handler>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.baixing.PageLinksQuery</implementation>
			<configuration>
				<uriPattern>http://{2}.baixing.com/{0}/?page={1}</uriPattern>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.baixing.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="id">-</path>
					<path name="date">table[*].tr[2-].td[4]</path>
					<path name="link">table[*].tr[2-].td[2].div.a.@href</path>
					<path name="title">table[*].tr[2-].td[2].div.a</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>list</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.baixing.ListFilter</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.http.Session</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="desc">p[*].*text</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>details</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.baixing.DetailsFilter</implementation>
		</component>
	</components>
</plexus>
