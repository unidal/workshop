<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
      <component>
         <role>com.site.wdbc.taobao.Configuration</role>
         <implementation>com.site.wdbc.taobao.Configuration</implementation>
         <configuration>
            <config>config.xml</config>
         </configuration>
      </component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.taobao.Processor</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.taobao.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
         <configuration>
            <handler query="page-links" interval="2">
               <page name="list"/>
               <handler query="next-page"/>
               <handler query="list" interval="2">
                  <page name="details"/>
                  <handler query="details">
                     <page name="description"/>
                     <handler query="description">
                        <processor name="default"/>
                     </handler>
                  </handler>
               </handler>
            </handler>
         </configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${next-page:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>description</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${details:desc-link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.taobao.PageLinksQuery</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.taobao.Configuration</role>
            </requirement>
            <requirement>
               <role>com.site.wdbc.http.Session</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
               <path name="type">-</path>
					<path name="date">form[*].div.div.div[*].div[4].*text</path>
					<path name="title">form[*].div.div.div[*].div[3].div.a[*]</path>
					<path name="link">form[*].div.div.div[*].div[3].div.a[*].@href</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>list</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.taobao.ListFilter</implementation>
         <requirements>
            <requirement>
               <role>com.site.wdbc.taobao.Configuration</role>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>next-page</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="img">div[*].div[4].a[*].img.@src</path>
					<path name="link">div[*].div[4].a[*].@href</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>next-page</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>next-page</role-hint>
			<implementation>com.site.wdbc.taobao.NextPageFilter</implementation>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="title">-</path>
					<path name="content">-</path>
					<path name="picture">-</path>
					<path name="contact">-</path>
					<path name="header">-</path>
					<path name="category">-</path>
					<path name="district">-</path>
					<path name="body">-</path>
					<path name="mobilephone">-</path>
					<path name="telephone">-</path>
					<path name="email">-</path>
					<path name="qq">-</path>
					<path name="msn">-</path>
					<path name="desc-link">script[*].@src</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>details</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.taobao.DetailsFilter</implementation>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>description</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="description">html.body.*text</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
               <role-hint>description</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>description</role-hint>
			<implementation>com.site.wdbc.taobao.DescriptionFilter</implementation>
		</component>   
	</components>
</plexus>
