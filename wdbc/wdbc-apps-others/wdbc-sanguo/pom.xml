<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <parent>
      <groupId>com.site.wdbc.others</groupId>
      <artifactId>default</artifactId>
      <version>1.0.0</version>
   </parent>
   <modelVersion>4.0.0</modelVersion>
   <artifactId>wdbc-sanguo</artifactId>
   <name>Sanguo Online</name>
   <dependencies>
      <dependency>
         <groupId>com.site.dal</groupId>
         <artifactId>dal-xml</artifactId>
      </dependency>
      <dependency>
         <groupId>com.site.wdbc</groupId>
         <artifactId>wdbc-http-client</artifactId>
      </dependency>
   </dependencies>
   <build>
      <plugins>
         <plugin>
            <groupId>com.site.maven.plugins</groupId>
            <artifactId>maven-codegen-plugin</artifactId>
            <executions>
               <execution>
                  <id>generating game api</id>
                  <configuration>
                     <manifest>${basedir}/src/main/resources/META-INF/dal/xml/api_manifest.xml</manifest>
                  </configuration>
                  <phase>generate-sources</phase>
                  <goals>
                     <goal>dal-xml</goal>
                  </goals>
               </execution>
               <execution>
                  <id>generating game model</id>
                  <configuration>
                     <manifest>${basedir}/src/main/resources/META-INF/dal/xml/model_manifest.xml</manifest>
                  </configuration>
                  <phase>generate-sources</phase>
                  <goals>
                     <goal>dal-xml</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>
</project>