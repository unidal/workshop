<plexus>
	<components>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>result-set</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="id">-</path>
					<path name="link">ul[*].li[*].h2.a.@href</path>
					<path name="given-name">ul[*].li[*].h2.a.span.span</path>
					<path name="family-name">ul[*].li[*].h2.a.span.span[2]</path>
				</paths>
			</configuration>
         <requirements>
            <requirement>
               <role>com.site.wdbc.query.WdbcFilter</role>
			      <role-hint>result-set</role-hint>
            </requirement>
         </requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>result-set</role-hint>
			<implementation>com.site.wdbc.linkedin.ResultSetFilter</implementation>
		</component>
	</components>
</plexus>
