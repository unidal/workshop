<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.scbit.Configuration</role>
			<implementation>com.site.wdbc.scbit.Configuration</implementation>
			<configuration>
				<config>config.xml</config>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.scbit.Processor</implementation>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.scbit.PageLinksQuery</implementation>
			<configuration>
				<uriPattern>http://www.oxfordjournals.org/nar/database/summary/{0}</uriPattern>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.scbit.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>summary</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>summary</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="title">html.body.div.div[5].div.div.h1</path>
					<path name="category">html.body.div.div[5].div.div.div[*].a</path>
					<path name="category-link">html.body.div.div[5].div.div.div[*].a.@href</path>
					<path name="hint">html.body.div.div[5].div.div.h3</path>
					<path name="description">html.body.div.div[5].div.div.div[*].*text</path>
					<path name="link">html.body.div.div[5].div.div.div[*].*</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>summary</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>summary</role-hint>
			<implementation>com.site.wdbc.scbit.SummaryFilter</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.http.Session</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
			<configuration>
				<handler query="page-links" interval="1">
					<page name="summary"/>
					<handler query="summary">
						<processor name="default"/>
					</handler>
				</handler>
			</configuration>
		</component>
	</components>
</plexus>
