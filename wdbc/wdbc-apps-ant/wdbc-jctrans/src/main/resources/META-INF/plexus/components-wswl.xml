<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.jctrans.Configuration</role>
			<implementation>com.site.wdbc.jctrans.Configuration</implementation>
			<configuration>
				<config>config.xml</config>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.jctrans.wswl.Processor</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.jctrans.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
			<configuration>
				<handler query="page-links" interval="2">
					<page name="list"/>
					<handler query="list" interval="2">
						<page name="details"/>
						<handler query="details">
							<processor name="default"/>
						</handler>
					</handler>
				</handler>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.jctrans.wswl.PageLinksQuery</implementation>
			<configuration>
				<uriPattern>http://info.jctrans.com/xueyuan/wswl/wswl/default{0}.shtml</uriPattern>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.jctrans.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="id">-</path>
					<path name="link">div[6].div.div[2].ul.li[*].p.a.@href</path>
					<path name="title">div[6].div.div[2].ul.li[*].p.a</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>list</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.jctrans.wswl.ListFilter</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.http.Session</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="date">div[*].div.div.div[2].ul.li.p[2].span</path>
					<path name="from">div[*].div.div.div[2].ul.li.p[2].span[2]</path>
					<path name="body">div[*].div.div.div[2].ul.li[2].table.tr.td.div.div.p[*]</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>details</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.jctrans.wswl.DetailsFilter</implementation>
		</component>
	</components>
</plexus>
