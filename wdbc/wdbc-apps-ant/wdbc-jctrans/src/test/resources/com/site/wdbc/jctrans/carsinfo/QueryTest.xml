<plexus>
	<components>
		<component>
			<role>com.site.wdbc.http.Session</role>
			<implementation>com.site.wdbc.http.impl.DefaultSession</implementation>
			<configuration>
				<headers>
					<header name="User-Agent">Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.1; SV1; Maxthon; .NET CLR 1.1.4322)</header>
				</headers>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.jctrans.Configuration</role>
			<implementation>com.site.wdbc.jctrans.Configuration</implementation>
			<configuration>
				<config>config.xml</config>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.http.Processor</role>
			<implementation>com.site.wdbc.jctrans.carsinfo.Processor</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.jctrans.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Flow</role>
			<implementation>com.site.wdbc.http.impl.DefaultFlow</implementation>
			<configuration>
				<handler query="page-links" interval="2">
					<page name="list"/>
					<handler query="list" interval="2">
						<page name="details"/>
						<handler query="details">
							<processor name="default"/>
						</handler>
					</handler>
				</handler>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>page-links</role-hint>
			<implementation>com.site.wdbc.jctrans.carsinfo.PageLinksQuery</implementation>
			<configuration>
				<uriPattern>http://land.jctrans.com/Carsinfo/index-0-0-------{0}.html</uriPattern>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.jctrans.Configuration</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${page-links:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="id">-</path>
					<path name="date">form.div[2].div.div[6-].ul.li[4].p.span</path>
					<path name="link">form.div[2].div.div[6-].ul.li[4].p.a.@href</path>
					<path name="title">form.div[2].div.div[6-].ul.li[4].p.a</path>
					<path name="location">form.div[2].div.div[6-].ul.li[5]</path>
					<path name="range">form.div[2].div.div[6-].ul.li[6]</path>
					<path name="price">form.div[2].div.div[6-].ul.li[7]</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>list</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>list</role-hint>
			<implementation>com.site.wdbc.jctrans.carsinfo.ListFilter</implementation>
			<requirements>
				<requirement>
					<role>com.site.wdbc.http.Session</role>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.http.Request</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.http.impl.FormRequest</implementation>
			<configuration>
				<action>${list:link}</action>
			</configuration>
		</component>
		<component>
			<role>com.site.wdbc.WdbcQuery</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.SelectQuery</implementation>
			<configuration>
				<paths>
					<path name="company">div[*].div[3].div.table.tr[2].td[2]</path>
					<path name="title">div[*].div[3].div.table.tr[3].td[2]</path>
					<path name="date">div[*].div[3].div.table.tr[4].td[2]</path>
					<path name="type">div[*].div[3].div.table.tr[5].td[2]</path>
					<path name="service">div[*].div[3].div.table.tr[6].td[2]</path>
					<path name="vechiel">div[*].div[3].div.table.tr[7].td[2]</path>
					<path name="length">div[*].div[3].div.table.tr[8].td[2]</path>
					<path name="weight">div[*].div[3].div.table.tr[9].td[2]</path>
					<path name="location">div[*].div[3].div.table.tr[10].td[2]</path>
					<path name="range">div[*].div[3].div.table.tr[11].td[2]</path>
					<path name="price">div[*].div[3].div.table.tr[13].td[2]</path>
					<path name="payment">div[*].div[3].div.table.tr[14].td[2]</path>
					<path name="expiry">div[*].div[3].div.table.tr[15].td[2]</path>
					<path name="notes">div[*].div[3].div.table.tr[16].td[2].*text</path>
				</paths>
			</configuration>
			<requirements>
				<requirement>
					<role>com.site.wdbc.query.WdbcFilter</role>
					<role-hint>details</role-hint>
				</requirement>
			</requirements>
		</component>
		<component>
			<role>com.site.wdbc.query.WdbcFilter</role>
			<role-hint>details</role-hint>
			<implementation>com.site.wdbc.jctrans.carsinfo.DetailsFilter</implementation>
		</component>
	</components>
</plexus>
